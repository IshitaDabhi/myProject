<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_area :code %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :billing_type %><br>
     <%= f.select :billing_type, options_for_select([["tnm", "tnm"], ["fixed", "fixed"]]) %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :deadline_date %><br>
    <%= f.date_select :deadline_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :git_url %><br>
    <%= f.text_field :git_url %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
     <%= f.select :status, options_for_select([["POC", "POC"],["Kick-off", "Kick-off"], ["completed", "completed"]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
